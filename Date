<!DOCTYPE html>
<html>
<head>
	<title>Date</title>
</head>
<body>
	<div id="calendrier"></div>

</body>
<script type="text/javascript">

	var today = new Date(); //initialisation date aujourd'hui
	var day = today.getDate();
	var month = today.getMonth()+1;
	var year = today.getFullYear();
	var full = day+"/"+month+"/"+year; // format dd/mm/yyyy

	
	//lendemain (C DE LA MERDE A CHANGER)
	var nextd = new Date(today.getTime() + 24 * 60 * 60 * 1000); 
	var dday = nextd .getDate();
	var mmonth = nextd .getMonth()+1;
	var yyear = nextd .getFullYear();
	var ffull = day+"/"+month+"/"+year;
	var tomorrow = dday+"/"+mmonth+"/"+yyear;
	document.getElementById("calendrier").innerHTML = full+"<br>"+tomorrow;

	

</script>
</html>
